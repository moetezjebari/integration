<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="454.0" prefWidth="705.0" stylesheets="@reponseaffiche.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.roua.AffichageReponseController">

    <VBox prefHeight="454.0" prefWidth="705.0" spacing="10.0" style="-fx-padding: 10;">
        <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des Réponses" />
            <VBox fx:id="reponsesContainer" spacing="10.0" /> <!-- Conteneur pour les réponses -->
            <Button fx:id="btnAjouterReponse" onAction="#ajouterReponse" text="Ajouter une réponse" />
        </children>
    </VBox>
</AnchorPane>
