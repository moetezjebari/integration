<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ChatController" style="-fx-background-color: #f0f4f7;">
    <VBox spacing="10" prefWidth="400" prefHeight="600" style="-fx-padding: 20;">
        <TextArea fx:id="chatArea" editable="false" wrapText="true" style="-fx-font-size: 14px; -fx-pref-height: 500px;"/>
        <TextField fx:id="inputField" promptText="Tapez votre message ici..." style="-fx-font-size: 14px;"/>
        <Button fx:id="sendButton" text="Envoyer" onAction="#envoyerMessage" style="-fx-background-color: linear-gradient(to right, #2980B9, #6DD5FA); -fx-text-fill: white;"/>
    </VBox>
</AnchorPane>
